<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="Header" parent="AppTheme">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/lightSub</item>
    </style>
    <style name="Section" parent="AppTheme">
        <item name="android:textColor">@color/darkSub</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Label" parent="AppTheme">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/darkText</item>
    </style>
    <style name="LabelValue" parent="AppTheme">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/darkSub</item>
    </style>
</resources>
